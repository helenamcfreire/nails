<div class="divFlores">

  <%= form_for(resource, :as => resource_name, :html => {:class => "form-horizontal"}, :url => session_path(resource_name)) do |f| %>

      <div class="error-messages">
        <% if !resource.nil? && resource.errors.any? %>
            <% resource.errors.full_messages.each do |msg| %>
                <span class="label label-important"><%= msg %></span>
            <% end %>
        <% end %>
      </div>

      <div style="margin-top: 110px; width: 400px;">

        <div class="control-group">
          <div class="logo_login">
            <%= image_tag('logo_244x97.png') %>
          </div>
        </div>

        <div class="control-group">
          <div class="controls">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to t(:cadastre_se), new_registration_path(resource_name), :class => "floatRight" %><br />
            <% end -%>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="inputEmail"><%=t :email %>:</label>
          <div class="controls">
            <%= f.email_field :email, :autofocus => true %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="inputPassword"><%=t :senha %>:</label>
          <div class="controls">
            <%= f.password_field :password %>
          </div>
        </div>

        <div class="control-group">
          <div class="controls">
            <%= f.submit t(:entrar), :class => "btn btn-warning floatRight" %>
          </div>
        </div>

      </div>

  <% end %>

</div>